#!/bin/bash

if [ -z $1 ] ; then
  echo "Missing filename(s)"
  exit 1
elif [ ! -e $1 ] ; then
  echo Cannot file requested filename: $1
  exit 1
fi
for file in $* ; do
    echo Stripping $file
    tmpfile=/tmp/stripper.$$
    cp $file $tmpfile
    git stripspace < $tmpfile > $file
    rm $tmpfile
done
